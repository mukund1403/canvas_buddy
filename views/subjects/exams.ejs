<div class="card">
    <h2 class="assignment-header">Exams for <%=module_code%></h2>
    <div class="card-header">
        <div class="row">
            <div class="col">Refresh again if data is not updated</div>
            <div class="col">For Exam Dates, "No Data Available" may mean there is no final exam or the mod is not available this semester</div>
            <div class="col"></div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>Exam Date</th>
                    <th>Days to Exam</th>
                    <th>SU-able?</th>
                </tr>
                <% examData.forEach(function(data) { %>
                    <tr>
                        <td><%= data.exam_date %></td>
                        <td><%= data.exam_days %></td>
                        <td><%= data.SU %></td>
                                        
                        <td></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>